{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(0.8))
	(include "/properties/selection/vehicle.inc" scale(0.75))
	{props "tank" "turret" "wheeled" "vision_lev02" "tractor" "tractor_light" "detect_tank_mg"}
	{extension "ba64.mdl"}
	{extension "crew.ext"}
	(include "ba64.ext")
	{PatherId "ba64"}
	{collider "truck"}
	{targetclass "armoredcar_l"}
	{targetSelector "tank_bullet"}

	{extender "enumerator"
		{digit_folder "ru1"}
	}

	{sensor
		{visor "human"
			{vision "recon_main"}
			{bone "visor3"}
		}
	}

	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{box
			{item "ammo mgun_rus dt" 1008}		;17 drums
			{item "dt" filling "ammo mgun_rus dt" 63 {user "mgun"}}
		}
	}

	{Weaponry
		{place "mgun"
			{type "main"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 2359}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_btr"
			speed(80) ;----------------------------------Max speed.
			speedatmaxturn(26) ;-------------------------Max speed at max turn.
			reverse(26) ;--------------------------------Max speed in Reverse.
			weight(2.36) ;-------------------------------Weight in Tonnes.
			power(68) ;----------------------------------Horse Power.
			fuel(90) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(350) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "mgun_rot"
		{limits -6 15}
		{speed2 20}
	}
	{bone "turret"
		{speed2 30}
	}
}