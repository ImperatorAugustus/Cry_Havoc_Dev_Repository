{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "tank" "turret" "wheeled" "with_gun" "vision_lev02" "muzzle_37mm_47mm"}
	{extension "ba6.mdl"}
	{extension "crew.ext"}
	(include "ba6.ext")
	{targetclass "armoredcar"}
	{targetSelector "tank_light"}

	{extender "enumerator"
		{digit_folder "ru2"}
	}

	{sensor
		{visor "main"
			{vision "recon_main"}
		}
	}

	{extender "inventory"
		{box
			{item "bulletrus_45 aphebc" 29}		;60 rounds
			{item "bulletrus_45 he" 30}
			{item "ammo mgun_rus dt" 3150}		;52 drums
		}
	}

	{Weaponry
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "45mm_20k" filling "bulletrus_45 aphebc" 1}
			{gunner "gunner"}
			{charger "commander"}
			("abm_dymamic_stabilised"
				zeroing(2.5)
				dispersion(0.20)
			)
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "dt" filling "ammo mgun_rus dt" 63}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "commander"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "hull"}
			{weapon "dt" filling "ammo mgun_rus dt" 63}
			{foresight "foresight4"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}

	{mass 5100}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_btr"
			speed(43) ;----------------------------------Max speed.
			speedatmaxturn(20) ;-------------------------Max speed at max turn.
			reverse(15) ;--------------------------------Max speed in Reverse.
			weight(5.1) ;--------------------------------Weight in Tonnes.
			power(40) ;----------------------------------Horse Power.
			fuel(65) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(130) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "gun_rot"
		{limits -10 15}
		{speed2 8}
	}
	{bone "turret"
		{speed2 10}
	}
}