{game_entity
	(include "/properties/cannon_mgun.ext")
	
	{props "broneschitok" "-carried" "sled" "vision_lev00_can" "detect_cannon_aa" "c_mg_light"}
	{Extension "broneschitok_2.mdl"}
	{targetclass "cannon_bullet"}
	{targetSelector "cannon_zenite"}
	{PatherID "cannon.carry.ski"}

	{Volume "body"
		{able {holed}}
	}

	("crew_open" place(driver) group(crew) bone(driver) door(emit1) animation(driver) extra())
	("crew_open" place(gunner) group(crew)	bone(gunner) door(emit1) animation(gunner) extra({openForCrush}))

	{placer
		{place "driver"}
		{place "commander" remove}
		{place "driver1" remove}
		{place "driver2" remove}
	}

	{boarder
		{anm "gunner"
			{forward {end "lie_fire_gun" 10}}
		}
		{anm "driver"
			{forward {end "cannon_maxim_move" 10}}
		}
		{link "driver" "gunner"}
	}

	{extender "cannon"
		{animation
			{move "cannon_maxim_move"}
			{reload "lie_reload_gun"}
		}
		{move {workers "driver" minWorkers 1} {obstacle "close"}}
		{attack {workers "gunner"} {obstacle "open"}}
	}

	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{box
			{item "dp_bipod" filling "mgun_rus dp ammo" 47 {user "mgun"}}
			{item "mgun_rus dp ammo" 470}
		}
	}

	{Weaponry
		{place "mgun"
			{type "main"}
			{gunner "gunner"}
			{charger "gunner"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			("abm_mgun")
			{Rotate}
		}
	}

	{mass 20}
	{Chassis
		("mobility_cannon"
			speed(9) ;-----------------------------------Max speed.
			weight(20) ;---------------------------------Weight in Kilograms.
		)
	}
}