{game_entity
	(include "/properties/cannon_mgun.ext")
	(include "/properties/shadow/tank.inc" scale(0.3))
	{extension "maxim_stand.mdl"}
	{props "wheeled" "-carried" "vision_lev00_can" "maxim" "detect_cannon_aa" "no_sandbags"}

	("solid_wheel" args "wheelleft")
	("solid_wheel" args "wheelright")
	("shield" args "shield" 6)

	{volume "ammo_box"
		{thickness 2}
	}

	{placer
		{place "driver1" remove}
		{place "driver2" remove}
	}

	{boarder
		{anm "gunner"
			{forward {end "pose_maxim_gunner_stand" 10}}
		}
		{anm "commander"
			{forward {end "pose_maxim_commander_stand" 10}}
		}
	}

	{extender "cannon"
		{animation
			{move "" ""}
			{fire "maxim_gunner_stand_fire" "maxim_commander_stand_fire"}
			{reload "maxim_gunner_stand_reload" "maxim_commander_stand_reload"}
		}
		{move {workers clear} {obstacle "close"}}
		{attack {obstacle "open"}}
		{rotate_ik_Limit 35}
	}

	{extender "shield" {on}}

	{extender "inventory"
		{box
			{weight 100}
			{item "mgun_rus belt" 1000}
		}
	}

	{Weaponry
		{place "mgun1"
			{type "main"}
			{charger "gunner"}
			{weapon "maxim_1910_30" filled}
			("abm_mgun")
			{Rotate}
			{basic}
		}
	}

	{mass 64}
	{Chassis ;// cannot move. this Maxim version is for fixed position use only.
		("mobility_cannon"
			speed(12) ;----------------------------------Max speed.
			weight(64) ;---------------------------------Weight in Kilograms.
		)
	}

	{bone "basis"
		{speed2 20}
	}
	{bone "gun_rot"
		{limits -15 20}
		{speed2 40}
	}
	{bone "turret"
		{limits -15 15}
		{speed2 40}
	}
}