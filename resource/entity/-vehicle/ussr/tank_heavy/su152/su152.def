{game_entity
	(include "/properties/tank_assaultgun.ext")
	(include "/properties/shadow/tank.inc" scale(1.2))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "td" "heavy" "-turret" "vision_lev06" "muzzle_150mm_155mm_sides" "diesel" "detect_spg"}
	{extension "su152.mdl"}
	(include "su152.ext")
	{targetclass "tank_heavy"}
	{targetSelector "tank_spg"}
	{PatherId "kv1"}
	{collider "tank.heavy"}

	{extender "enumerator"
		{digit_folder "ru1"}
	}

	{sensor
		{visor "main"
			{vision "tank_range_210"}
		}
	}

	("crew_5_human_2")

	{boarder
		{anm "driver"
			{forward {begin "board_kv2_driver"} {end "seat_gunner_stand"} {base "open_driver"}}
			{reverse {end "emit_tank_2_hold"}}
		}
		{anm "left"
			{forward {begin "board_Kv-85"} {end "seat_commander_hatch"}}
			{reverse {end "emit_tank_2_hold"}}
		}
		{anm "right"
			{forward {begin "board_Kv-85"} {end "seat_commander_hatch"}}
			{reverse {end "emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward {begin "board_HighArmor"} 	{end "seat_armor"}}
			{reverse {end "emit_tank_2"}}
		}
		{anm "armor1"
			{forward {begin "board_HighArmor"} {end "seat_armor"}}
			{reverse {end "emit_body"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor1))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor1))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor))
	("seat_human" place(seat5) bone(seat05) door(emit7)  animation(armor))
	("seat_human" place(seat6) bone(seat06) door(emit8)  animation(armor1))
	("seat_human" place(seat7) bone(seat07) door(emit9)  animation(armor))

	{extender "inventory"
		{box
			{item "bulletrus_152 aphe" 6}		; 20 rounds
			{item "bulletrus_152 he" 13}
			{item "satchel_charge_rus" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "152mm_ml20a" filling "bulletrus_152 he" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_td"
				zeroing(4.0)
				dispersion(0.25)
			)
		}
	}

	{mass 45500}
	{Chassis
		("tank_trace" fx("tracks_big") step(0.47) len(0.90))
		("mobility_tank"
			speed(43) ;----------Max speed when fully accelerated on road, km/h.
			reverse(6) ;---------Max speed in reverse on road, km/h.
			traverse(18) ;-------Track traverse, per second, in degrees.
			weight(45.5) ;-------Weight in Tonnes.
			power(600) ;---------Engine Power, in hp.
			track(3.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(600) ;----------Fuel capacity in Litres.
			type(diesel) ;-------Fuel type. (diesel OR fuel)
			range(200) ;---------Range in km, off-road.
		)
	}
	{bone "gun_rot"
		{limits -3 20}
		{speed2 4}
	}
	{bone "turret"
		{limits -12 12}
		{speed2 4}
	}
}