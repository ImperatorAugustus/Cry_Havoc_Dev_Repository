{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle_big.inc" scale(0.9))
	{props "heavy" "vision_lev05" "muzzle_85mm_93mm_sides" "shield" "smoke" "nwg" "detect_tank_heavy"}
	{extension "tiger1mid.mdl"}
	(include "tiger1mid.ext")
	{targetclass "tank_heavy"}
	{targetSelector "tank_heavy"}
	{collider "tank.heavy"}
	{PatherId "tiger"}

	{extender "enumerator"
		{digit_folder "ger"}
	}

	{sensor
		{visor "main"
			{vision "tank_range_210"}
		}
	}

	("crew_5_human_extended")

	{boarder
		{anm "driver"
			{forward	{begin	"board_pz4_driver"} {end "pose_mgun_pz6"} {base "open_driver"}}
			{reverse 	{end	"board_pz4_driver" -1} {base "open_driver" -1}}
		}
		{anm "left"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"board_cromwell" -1}}
		}
		{anm "right"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"board_cromwell" -1}}
		}
		{anm "armor"
			{forward	{begin	"board_HighArmor"} 	{end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor))

	{extender "shield" {on}}

	{extender "smokescreen"
		{cooldown 5}
		{itemTags "grenade nbks"}
	}

	{extender "inventory"
		{box
			{item "bulletger_88_l56 apcbche" 34} 	; 92 rounds
			{item "bulletger_88_l56 he" 46}
			{item "bulletger_88_l56 apcr" 2}
			{item "bulletger_88_l56 heat" 9}
			{item "ammo mgun_ger belt" 4500}		; 32 belts (150 rounds each)
			{item "geballteladung_3kg" 1}
			{item "nbks grenade" 6}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "88mm_kwk36" filling "bulletger_88_l56 apcbche" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic"
				zeroing(3.0)
				dispersion(0.20)
			)
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "mg34_tank" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "charger"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "hull"}
			{weapon "mg34_tank" filled}
			{foresight "foresight4"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}

	{mass 57000}
	{Chassis
		("tank_trace" fx("tracks_big") step(0.47) len(0.91))
		("mobility_tank"
			speed(38) ;----------Max speed when fully accelerated on road, km/h.
			reverse(12) ;--------Max speed in reverse on road, km/h. (+2 of real life speed)
			traverse(23) ;-------Track traverse, per second, in degrees.
			weight(57) ;---------Weight in Tonnes.
			power(600) ;---------Engine Power, in hp. //engine was governed to 2500 max rpm which reduced it from 700HP to 600HP
			track(3.3) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(540) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(80) ;----------Range in km, off-road.
		)
	}

	{bone "gun_rot"
		{limits -8 15}
		{speed2 4}
	}
	{bone "turret"
		{speed2 6}
	}
}