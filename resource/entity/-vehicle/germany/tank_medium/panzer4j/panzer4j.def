{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc"  scale(1.2))
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	{props "medium" "vision_lev04" "muzzle_75mm_76mm_sides" "shield" "smoke" "nvw"}
	{extension "panzer4j.mdl"}
	(include  "panzer4j.ext")
	{PatherId "panzer4"}
	{targetclass "tank_medium"}
	{targetSelector "tank_medium"}

	{extender "enumerator"
		{digit_folder "ger"}
	}

	{sensor
		{visor "main"
			{vision "tank_range_210"}
		}
	}

	("crew_5_human_extended")
	;("gunner_visible")

	{boarder
		{anm "driver"
			{forward	{begin	"board_pz4_driver"} {end "pose_mgun_pz6"} {base "open_driver"}}
			{reverse 	{end	"board_pz4_driver" -1} {base "open_driver" -1}}
		}
		{anm "left"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"board_cromwell" -1}}
		}
		{anm "right"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"board_cromwell" -1}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} 	{end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_1"}}
		}
	}
	
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor1))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor))

	{extender "shield" {on}}

	{extender "smokescreen"
		{cooldown 5}
		{itemTags "grenade nbk39"}
	}

	{extender "inventory"
		{box
			{item "bulletger_75_l43 apcbche" 39} 	; 87 rounds
			{item "bulletger_75_l43 he" 38}
			{item "bulletger_75_l43 apcr" 4}
			{item "bulletger_75_l43 heatc" 5}
			{item "ammo mgun_ger belt" 2850}		; 21 belts (150 rounds each)
			{item "geballteladung_3kg" 1}
			{item "nbk39 grenade" 6}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "75mm_kwk40_l48" filling "bulletger_75_l43 apcbche" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic"
				zeroing(3.0)
				dispersion(0.20)
			)
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "mg34_tank" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "charger"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "hull"}
			{weapon "mg34_tank" filled}
			{foresight "foresight4"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
		{place "mgun"
			{type "aa"}
			{gunner "commander"}
			{charger "commander"}
			{LinkBone "mgun_rot"}
			{LinkAnimation "off"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}

	{mass 25000}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.45))
		("mobility_tank"
			speed(38) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8) ;---------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(25.0) ;-------Weight in Tonnes.
			power(265) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(4.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(680) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(210) ;---------Range in km, off-road.
		)
	}

	{bone "gun_rot"
		{limits -10 20}
		{speed2 5}
	}
	{bone "turret"
		{speed2 6}
	}
	{texmod "2"}
}