{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "tank" "turret" "wheeled" "with_gun" "vision_lev02" "muzzle_25mm"}
	{extension "p204_f.mdl"}
	{extension "crew.ext"}
	(include "p204_f.ext")
	{targetclass "armoredcar"}
	{targetSelector "tank_light"}

	{sensor
		{visor "main"
			{vision "recon_main"}
		}
	}

	{extender "inventory"
		{box
			{item "bulletger_25 ap" 149} 		; 150 rounds
			{item "ammo mgun_ger belt" 3600}	; 15 belts (250 rounds each)
			{item "geballteladung_3kg" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "25mm_kwk121f" filling "bulletger_25 ap"}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_stabilised"
				zeroing(2.8)
				dispersion(0.20)
			)
		}
		{place "mgun"
			{type "coaxial"}
			{weapon "mg31f" filled}
			{foresight "foresight3"}
			{gunner "gunner"}
			{charger "charger"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 8200}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_btr"
			speed(72) ;----------------------------------Max speed.
			speedatmaxturn(26) ;-------------------------Max speed at max turn.
			reverse(30) ;--------------------------------Max speed in Reverse.
			weight(8.2) ;--------------------------------Weight in Tonnes.
			power(105) ;---------------------------------Horse Power.
			fuel(145) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(200) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "gun_rot"
		{limits 15 -12}
		{speed2 10}
	}
	{bone "mgun_rot"
		{limits 15 -12}
		{speed2 20}
	}
	{bone "turret"
		{speed2 15}
	}
}