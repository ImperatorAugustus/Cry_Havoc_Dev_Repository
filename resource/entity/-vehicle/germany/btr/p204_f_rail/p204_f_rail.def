			{item "bulletger_25 ap" 149} 		; 150 rounds
			{item "ammo mgun_ger belt" 3600}	; 15 belts (250 rounds each)
			{item "geballteladung_3kg" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
